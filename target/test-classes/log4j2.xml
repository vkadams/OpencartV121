<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="WARN">

	<Properties>
		<Property name="basePath">./logs</Property>
	</Properties>
	
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"></PatternLayout>
		</Console>
		
		<RollingFile name="File" fileName="${basePath}/automation.log" filePattern="${basePath}/automation-%d{yyyy-MM-dd}.log">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"></PatternLayout>
			<SizeBasedTriggeringPolicy size="50000"></SizeBasedTriggeringPolicy>
		</RollingFile>
	
	</Appenders>
	
	<Loggers>
		<Root level="Debug"><!-- Here you can use miltiple log levels All < Trace < Debug < Info < Warn < Error < Fatal < off -->
		<!-- <AppenderRef ref="Console"/>-->
		<AppenderRef ref="File"></AppenderRef>
		</Root>
	</Loggers>


</Configuration>
